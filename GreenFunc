@Article{Ding2014,
  Title                    = {An Accurate and Systematic Surface-Wave Pole Location Method for Multilayered Media},
  Author                   = {J. Ding and S. L. Dvorak},
  Journal                  = {IEEE Transactions on Antennas and Propagation},
  Year                     = {2014},

  Month                    = {Feb},
  Number                   = {2},
  Pages                    = {997-1001},
  Volume                   = {62},
  Abstract                 = {Finding the surface-wave modes in multilayered media is a problem that is of great importance in many full-wave numerical electromagnetic solvers. In this communication, an efficient and systematic method is proposed to locate all of the surface-wave poles for general multilayered structures. It is observed that the characteristic equations can be cast into a function composed of εri, kz,i, and Ti= tan(kz,idi), where the Ti occur for the substrates that have finite thicknesses. The pole location method is carried out in the complex kzM -plane, where kzM represents the wave number, along the z-axis, for the substrate with the maximum permittivity. Two sets of critical points are determined in the kzM-plane according to the parameters of the structure. Since there is at most one pole between two consecutive critical points, these critical points establish proper limits for the zero search algorithm. Muller's method can thus be applied to find the pole between the two consecutive critical points if it exists. The proposed method is validated by means of several numerical examples.},
  Doi                      = {10.1109/TAP.2013.2292071},
  File                     = {Ding2014.pdf:Ding2014.pdf:PDF},
  ISSN                     = {0018-926X},
  Keywords                 = {electromagnetic waves;Green's function methods;inhomogeneous media;multilayers;surface-wave modes;multilayered media;fullwave numerical electromagnetic solvers;surface-wave poles;general multilayered structures;characteristic equations;pole location method;complex kzM -plane;critical points;zero search algorithm;Muller's method;Microstrip;Equations;Green's function methods;Spectral analysis;Periodic structures;Systematics;Geometry;Green's function;multilayered media;surface wave modes;pole location},
  Owner                    = {913},
  Timestamp                = {2019.01.19}

@Article{Ye2012,
  Title                    = {A Robust Method for the Computation of Green's Functions in Cylindrically Stratified Media},
  Author                   = {L. Ye and F. Zhao and K. Xiao and S. Chai},
  Journal                  = {IEEE Transactions on Antennas and Propagation},
  Year                     = {2012},

  Month                    = {June},
  Number                   = {6},
  Pages                    = {3046-3051},
  Volume                   = {60},

  __markedentry            = {[913:]},
  Abstract                 = {Closed-form Green's functions for cylindrically stratified media are derived in terms of spherical waves and surface-wave contributions. The methodology is based on a two-level approximation of the spectral-domain Green's functions. In the first step, the large argument behavior of the zeroth-order Hankel functions is used for the extraction of the quasistatic images from the spectral-domain Green's functions with the use of the Sommerfeld identity. In the second step, the remaining part of the Green's functions are approximated in terms of pole-residue expressions via the rational function fitting method. This robust, efficient, and fully numerical approach does not call for an analytical cumbersome extraction of the surface wave poles, prior to the spectrum fitting. Moreover, it can be applied in both the near- and far-field. Numerical results for the Green's functions of one-layer and two-layer structures are presented to verify the accuracy and efficiency of this approach.},
  Doi                      = {10.1109/TAP.2012.2194650},
  File                     = {Ye2012.pdf:Ye2012.pdf:PDF},
  ISSN                     = {0018-926X},
  Keywords                 = {approximation theory;electric fields;function approximation;Green's function methods;inhomogeneous media;rational functions;spectral-domain analysis;closed-form Green's function computation;cylindrically stratified media;spherical wave contribution;surface-wave contribution;spectral-domain Green's function;two-level approximation;zeroth-order Hankel function;quasistatic image extraction;Sommerfeld identity;pole-residue expression;rational function fitting method;numerical approach;analytical cumbersome extraction;surface wave pole;spectrum fitting;two-layer structure;one-layer structure;electric field;Green's function methods;Surface waves;Approximation methods;Spectral analysis;Media;Accuracy;Electronics packaging;Closed-form Green's functions;cylindrically stratified media;discrete complex images method (DCIM);rational function fitting method (RFFM)},
  Owner                    = {913},

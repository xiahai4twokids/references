@Article{Adanir2014,
  Title                    = {Complete and Accurate Discrete Complex Image Approximation of Periodic Green's Function in Layered Media},
  Author                   = {S. Adanir and L. Alatan},
  Journal                  = {IEEE Transactions on Antennas and Propagation},
  Year                     = {2014},

  Month                    = {Aug},
  Number                   = {8},
  Pages                    = {4115-4121},
  Volume                   = {62},

  __markedentry            = {[913:]},
  Abstract                 = {The periodic Green's functions (PGF) in layered media can be expressed as an infinite series in terms of the spectral domain Green's functions. The discrete complex image method (DCIM) can be used to approximate these spectral domain Green's functions. In this work, it is demonstrated that the complete and accurate DCIM approximation of the PGF is possible only when the DCIM approximation is obtained through the samples of the spectral domain Green's function along the real kρaxis. This choice of sampling path requires the extraction of surface wave pole contributions prior to the application of DCIM. Different forms of the Ewald method are utilized to efficiently compute the infinite summations associated with the complex images and the contribution of surface wave poles.},
  Doi                      = {10.1109/TAP.2014.2323087},
  File                     = {Adanir2014.pdf:Adanir2014.pdf:PDF},
  ISSN                     = {0018-926X},
  Keywords                 = {approximation theory;electromagnetic wave propagation;Green's function methods;discrete complex image approximation;periodic Green's function;layered media;spectral domain Green's functions;DCIM approximation;sampling path;surface wave pole contributions;Ewald method;Green's function methods;Approximation methods;Surface waves;Spectral analysis;Nonhomogeneous media;Convergence;Accuracy;Discrete complex image method;Ewald transformation;Green's functions;multilayer periodic structures},
  Owner                    = {913},
  Timestamp                = {2019.01.19}
